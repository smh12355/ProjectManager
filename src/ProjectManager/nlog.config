<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="info"
      internalLogFile="internal-nlog.txt">

	<targets>
		<!-- Файл для информационных логов -->
		<target xsi:type="File" name="infoLogfile" fileName="../../../../logs/info.log" layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=ToString}" />

		<!-- Файл для предупреждений -->
		<target xsi:type="File" name="warnLogfile" fileName="../../../../logs/warn.log" layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=ToString}" />

		<!-- Файл для ошибок -->
		<target xsi:type="File" name="errorLogfile" fileName="../../../../logs/error.log" layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=ToString}" />
	</targets>

	<rules>
		<!-- Правило для информационных логов -->
		<logger name="*" minlevel="Info" maxlevel="Info" writeTo="infoLogfile" />

		<!-- Правило для предупреждений -->
		<logger name="*" minlevel="Warn" maxlevel="Warn" writeTo="warnLogfile" />

		<!-- Правило для ошибок -->
		<logger name="*" minlevel="Error" writeTo="errorLogfile" />
	</rules>
</nlog>
